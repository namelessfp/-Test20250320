@model IEnumerable<Byron20250320.Models.Brand>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BrandId" class="btn btn-warning btn-sm me-2">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.BrandId" class="btn btn-info btn-sm me-2">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.BrandId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
        </tr>
}
    </tbody>
</table>
